@model LojaVirtual.Core.Application.Models.Produto

@{
    ViewData["Title"] = "Produto: " + Model.Nome;
}

<h1>Detalhes do Produto</h1>

<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class="col-sm-10">
            @Model.Preco.ToString("C")
        </dd>
        @* <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Imagem)
        </dt> *@
        @* <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Imagem)
        </dd> *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estoque)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estoque)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vendedor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vendedor.Nome)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
        <i class="bi bi-pen"></i>
        Editar
    </a>
    <a asp-action="Index" class="btn btn-primary">
        <i class="bi bi-arrow-left"></i>
        Voltar à lista
    </a>
</div>

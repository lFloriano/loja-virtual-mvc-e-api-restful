@model IEnumerable<LojaVirtual.Core.Application.Models.Categoria>

@{
    ViewData["Title"] = "Categorias";
}

<h1>Categorias</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i>
        Adicionar uma categoria
    </a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary btn-sm" asp-route-id="@item.Id">
                        <i class="bi bi-pen"></i>
                        Editar
                    </a>
                    <a asp-action="Details" class="btn btn-primary btn-sm" asp-route-id="@item.Id">
                        <i class="bi bi-search"></i>
                        Detalhes
                    </a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.Id">
                        <i class="bi bi-trash"></i>
                        Excluir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

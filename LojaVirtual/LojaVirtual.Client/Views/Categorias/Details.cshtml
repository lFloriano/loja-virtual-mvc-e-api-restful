@model LojaVirtual.Client.Models.Categorias.Categoria

@{
    ViewData["Title"] = "Categoria: " + Model.Nome;
}

<h1>Detalhes da Categoria</h1>

<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
